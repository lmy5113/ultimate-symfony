<div class="card">
	<img src="{{ product.mainPicture }}" class="img-fluid" alt="product image">
	<div class="card-body">
		<h4 class="card-title">
			{{product.name}}
			({{ product.price / 100}}
			&euro;)
		</h4>
		<span class="badge bg-info">
			{{product.category.name}}
		</span>
		<p class="card-text">
			{{ product.shortDescription }}
			<a href="{{ path('product_show', {'category_slug' : product.category.slug, 'slug' : product.slug}) }}" class="btn btn-primary btn-sm">DÃ©tails</a>
			<a href="{{ path('cart_add', {'id' : product.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
		</p>
	</div>
</div>
